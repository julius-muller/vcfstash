// Global settings
cleanup = true

// Parameters
params {
	// Resource files
	chr_add = '/mnt/data/samples/chr_add.txt'
	refdir = '/mnt/data/resources/reference/ucsc/'
    reference = "${refdir}/hg19_canonical.fa.gz"
	reference_md5sum = '28a3d9f0162be1d5db2011aa30458129'
    db_bcf = null

	// ECHTVAR paths
	echtvar_cmd = '/mnt/data/apps/echtvar/echtvar'
	echtvar_cmd_version = '0.2.1'
	echtvar_gnomad_genome = '/mnt/data/resources/gnomad/vep_gnomad_v4_hg19_genomes/echtvar_vep_gnomad4.1_genome_hg19lo.zip'
	echtvar_gnomad_genome_md5sum= '52158f41b93f691a477db62e50f7cc7b'
	echtvar_gnomad_exome = '/mnt/data/resources/gnomad/vep_gnomad_v4_hg19_exomes/echtvar_vep_gnomad4.1_exome_hg19lo.zip'
	echtvar_gnomad_exome_md5sum = '75bd13405ab59bb07e8db9836ddc9534'
	echtvar_clinvar = '/mnt/data/resources/clinvar/vcf_GRCh37/clinvar_20241111_hg19.zip'
	echtvar_clinvar_md5sum = '97f89ae8cd2ee1e9fb95e2fd7703a7ee'

	// VEP Configuration
	vep_cmd = 'apptainer exec -B /mnt/data:/mnt/data /mnt/data/apps/ensembl-vep/113/vep.sif vep'
	vep_cmd_version = '113.0'
	vep_cache = '/mnt/data/apps/ensembl-vep/113/cachedir/'

	// VEP Performance Settings
	vep_max_chr_parallel = 4
	vep_max_forks = 4
	vep_buffer = 500000

	// Workflow control
	db_mode = null
}

// Process configuration
process {
	executor = 'local'
    cpus = 32
    memory = '64 GB'
    scratch = true

	withName: 'RenameAndNormalizeVCF' {
		memory = '20 GB'
	}

	withName: 'VEPAnnotate' {
		memory = '20 GB'
	}

	withName: 'EchtvarAnnotateChr' {
		memory = '50 GB'
	}

}
