name: Build and Publish cache image

on:
  workflow_dispatch:
    inputs:
      af:
        description: "Allele-frequency threshold (e.g. 0.10)"
        required: true
        default: "0.10"
      tool_version:
        description: "VEP version"
        required: true
        default: "115.1"
      genome:
        description: "Genome build"
        required: true
        default: "GRCh38"
      cache_name:
        description: "Cache name (sub-dir in /cache/stash)"
        required: true
        default: "vep_gnomad"

jobs:
  build:
    runs-on: ubuntu-latest
    permissions:
      packages: write       # allow push to GHCR
      contents: read
    steps:
      - uses: actions/checkout@v4

      - uses: docker/setup-buildx-action@v3

      - name: Login to GHCR
        uses: docker/login-action@v3
        with:
          registry: ghcr.io
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      - name: Build & push image
        uses: docker/build-push-action@v5
        with:
          context: .
          file: docker/Dockerfile.cache
          push: true
          build-args: |
            AF=${{ github.event.inputs.af }}
            TOOL_VERSION=${{ github.event.inputs.tool_version }}
            GENOME=${{ github.event.inputs.genome }}
            CACHE_NAME=${{ github.event.inputs.cache_name }}
          tags: |
            ghcr.io/${{ github.repository_owner }}/vcfstash-cache:${{ github.event.inputs.genome }}-af${{ github.event.inputs.af }}-vep${{ github.event.inputs.tool_version }}
          cache-from: type=gha
          cache-to:   type=gha,mode=max